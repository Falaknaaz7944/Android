<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@drawable/rectangle25"
    tools:context=".MainActivity"

    >
    <ImageView
        android:id="@+id/imgs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/group64"
      android:layout_marginBottom="350dp"

        />

    <ImageView
        android:id="@+id/blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/vector1"
        android:layout_alignParentBottom="true"
        />
        <TextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGIN"
           android:layout_marginTop="550dp"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="@dimen/_30sdp"
            android:textStyle="bold"
            />

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/roundedcorners"
        android:layout_marginBottom="200dp"
        android:layout_marginLeft="35dp"
        android:layout_below="@id/login"
        android:layout_marginTop="30dp"
        />
    <com.hbb20.CountryCodePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:ccp_contentColor="#131353"
        app:ccp_showFlag="false"
       android:layout_below="@id/login"
        android:layout_marginBottom="200dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        app:ccp_arrowColor="#131353"
        app:ccp_arrowSize="27dp"
        />


    <EditText
        android:id="@+id/textfield"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:inputType="text"
        android:text="Enter your number"
        android:textAlignment="center"
        android:textColor="#999999"
        android:layout_below="@id/login"
        android:background="@drawable/roundedcorners"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="200dp"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/otp"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:background="@drawable/roundedcorners"
        android:layout_marginBottom="200dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Send OTP"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#131353"
        />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/bluearrow"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="3dp"


            android:layout_alignTop="@id/otp"
            />

</RelativeLayout>