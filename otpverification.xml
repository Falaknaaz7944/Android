<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main"
    tools:context=".MainActivity"
    android:background="@drawable/rectangle25"
    >
    <ImageView
        android:id="@+id/imgs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/group64"
        android:layout_marginBottom="350dp"
        />

    <ImageView
        android:id="@+id/blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/vector1"
        android:layout_alignParentBottom="true"
        />
    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OTP Verification"
        android:layout_marginTop="550dp"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="@dimen/_25sdp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/verificationtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the verification code we just sent \non your mobile"
        android:layout_below="@+id/login"
        android:textColor="@color/white"
        android:layout_marginLeft="85dp"
        />
    <TextView
        android:id="@+id/verificationtxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number : +91 95236 25631"
        android:layout_below="@+id/verificationtxt"
        android:textColor="@color/white"
        android:layout_marginLeft="85dp"
        android:textStyle="bold"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rectangle40"
        android:layout_below="@+id/verificationtxt2"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rectangle40"
        android:layout_below="@+id/verificationtxt2"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rectangle40"
        android:layout_below="@+id/verificationtxt2"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:id="@+id/boxes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rectangle40"
        android:layout_below="@+id/verificationtxt2"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/verify"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:background="@drawable/roundedcorners"
        android:layout_marginBottom="200dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/boxes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Verify"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#131353"
        />
    <TextView
        android:id="@+id/verificationtxt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Didnâ€™t receive code? Resend OTP"
        android:layout_below="@+id/boxes"
        android:textColor="@color/white"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        />







</RelativeLayout>